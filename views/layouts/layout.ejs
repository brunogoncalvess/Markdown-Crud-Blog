    <body>
        <div class="container">
            <header class="menu-spacing">
                <div class="wrapper menu-btns">
                    <a href="/">
                        <div  class="logo">
                            <img src="/img/Logo.png" alt="Logo">                        
                        </div>
                        <div class="menu-btns-btns">
                            <a href="/posts/new">
                                <div class="new-post-btn">New Post</div>
                            </a>
                            <a href="https://www.markdownguide.org/basic-syntax/" target="_blank">
                                <div class="new-post-btn">How To</div>
                            </a>
                        </div>
                    </a>
                </div>
            </header>
            <div class="wrapper">
                <div class="spacing"></div>
                <%- body %>          
            </div>
        </div>        
        <div class="footer-wrapper">
            <footer class="wrapper">            
                <div>
                    <span>Made with <span class="heart">❤</span> by <strong>Bruno Gonçalves</strong></span>
                </div>
                <div>
                    <a href="https://www.linkedin.com/in/brunrsg/">
                        <img src="/img/linkedin-brands.svg" alt="linkedin icon">
                    </a>
                    <a href="https://github.com/brunogoncalvess/">
                        <img src="/img/github-square-brands.svg" alt="github icon">
                    </a>
                </div>
            </footer>
            <div class="footer-line"></div>
        </div>
